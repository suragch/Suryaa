<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_night_mode"
        android:title="Night mode"
        android:defaultValue="false" />
    <ListPreference
        android:key="pref_font"
        android:title="Font"
        android:summary="%s"
        android:dialogTitle="Font to display Mongolian text"
        android:entries="@array/font_type_entries"
        android:entryValues="@array/font_type_values"
        android:defaultValue="@string/pref_font_type_default" />
    <ListPreference
        android:key="pref_study_mode"
        android:title="Study mode"
        android:summary="%s"
        android:dialogTitle="What to study"
        android:entries="@array/study_mode_entries"
        android:entryValues="@array/study_mode_values"
        android:defaultValue="@string/pref_study_mode_default" />
    <ListPreference
        android:key="pref_max_items"
        android:title="Max words per study session"
        android:summary="%s"
        android:dialogTitle="Max words per study session"
        android:entries="@array/max_items_entries"
        android:entryValues="@array/max_items_values"
        android:defaultValue="@string/pref_max_items_default"/>
    <Preference
        android:key="pref_help"
        android:title="Help">
    </Preference>
    <Preference
        android:key="pref_about"
        android:title="About">
    </Preference>
</PreferenceScreen>