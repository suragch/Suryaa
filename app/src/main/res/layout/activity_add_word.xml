<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/primary_text_dark">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.studymongolian.mongollibrary.MongolEditText
                android:id="@+id/metMongolWord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                app:textColor="@color/textColorPrimary"
                app:textSize="24sp"/>

            <EditText
                android:id="@+id/etDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/metMongolWord"
                android:hint="definition"/>

            <EditText
                android:id="@+id/etPronunciation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etDefinition"
                android:layout_toRightOf="@id/metMongolWord"
                android:inputType="textNoSuggestions"
                android:hint="pronunciation"/>

            <!-- TODO replace these temp buttons with an IPA keyboard -->

            <LinearLayout
                android:id="@+id/tempIpaButtonPanelOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPronunciation"
                android:layout_toRightOf="@id/metMongolWord"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ə"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ɔ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ʊ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="æ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ɛ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="œ"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tempIpaButtonPanelTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempIpaButtonPanelOne"
                android:layout_toRightOf="@id/metMongolWord"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ʃ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ʧ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ʤ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ŋ"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onIpaButtonClick"
                    android:text="ː"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivRecordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempIpaButtonPanelTwo"
                android:layout_margin="30dp"
                android:layout_toRightOf="@id/metMongolWord"
                android:contentDescription="@string/record_audio_content_description"
                android:src="@drawable/ic_fiber_manual_record_black_48dp"
                android:tint="@android:color/holo_red_dark"/>

            <ImageView
                android:id="@+id/ivPlayButton"
                style="@style/playButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempIpaButtonPanelTwo"
                android:layout_margin="30dp"
                android:layout_toRightOf="@id/ivRecordButton"
                android:contentDescription="@string/play_audio_content_description"/>

        </RelativeLayout>

    </ScrollView>

    <net.studymongolian.mongollibrary.ImeContainer
        android:id="@+id/keyboard_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

</LinearLayout>